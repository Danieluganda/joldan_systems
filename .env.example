# Application Configuration
NODE_ENV=development
PORT=5000
CLIENT_URL=http://localhost:3000

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=procurement_discipline_db
DB_USER=postgres
DB_PASSWORD=your_password
DB_POOL_MIN=2
DB_POOL_MAX=10

# Redis Configuration (for sessions/caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Authentication
JWT_SECRET=your_jwt_secret_key_here_change_in_production
JWT_EXPIRE=7d
REFRESH_TOKEN_SECRET=your_refresh_token_secret_here
REFRESH_TOKEN_EXPIRE=30d

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_password
SMTP_FROM=noreply@procurement-system.com

# File Upload
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=52428800
ALLOWED_FILE_TYPES=pdf,doc,docx,xls,xlsx,ppt,pptx,jpg,jpeg,png,zip

# AWS S3 (optional, for cloud storage)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_BUCKET_NAME=

# Azure Cosmos DB (optional alternative)
COSMOS_CONNECTION_STRING=
COSMOS_DATABASE=
COSMOS_CONTAINER=

# Logging
LOG_LEVEL=debug
LOG_FILE=logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=14d

# API Keys
API_TIMEOUT=30000
API_RATE_LIMIT=100
API_RATE_WINDOW=15m

# Feature Flags
ENABLE_AUDIT_TRAIL=true
ENABLE_DIGITAL_SIGNATURES=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_TWO_FACTOR_AUTH=false

# Third-party Services
SENTRY_DSN=
STRIPE_KEY=
STRIPE_SECRET=

# Security
CORS_ORIGIN=http://localhost:3000,https://yourdomain.com
SESSION_SECRET=your_session_secret_here
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_SPECIAL_CHARS=true
PASSWORD_REQUIRE_NUMBERS=true
